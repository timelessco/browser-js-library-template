{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommitTypeAll(chore)"],
  "commitMessageAction": "‚¨ÜÔ∏è update",
  "commitMessageTopic": "{{depName}}",
  "pinVersions": false,
  "dependencyDashboardTitle": "Renovate Dependency Updates",
  "prCreation": "immediate",
  "timezone": "Asia/Kolkata",
  "stabilityDays": 10,
  "separateMultipleMajor": true,
  "separateMinorPatch": true,
  "ignoreUnstable": true,
  "rebaseStalePrs": true,
  "prHourlyLimit": 1,
  "prConcurrentLimit": 20,
  "composer": { "enabled": true },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["Security", "Type: Critical"]
  },
  "automerge": true,
  "major": {
    "automerge": false
  },
  "automergeStrategy": "squash",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "groupName": "dependencies (non-major)",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "rollback",
        "bump"
      ],
      "labels": ["Dependency", "automerge üöÄ"]
    },
    {
      "groupName": "devDependencies (non-major)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "rollback",
        "bump"
      ],
      "labels": ["DevDependency", "automerge üöÄ"]
    },
    {
      "groupName": "dependencies (major)",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["major"],
      "labels": ["DevDependency"],
      "prPriority": 1
    },
    {
      "groupName": "devDependencies (major)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "labels": ["Dependency"],
      "prPriority": 1
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "definitelyTyped",
      "labels": ["DevDependency"]
    },
    {
      "matchDatasources": ["npm"],
      "groupName": "renovate-meta",
      "labels": ["OtherDependencies", "automerge üöÄ"],
      "semanticCommits": "enabled"
    }
  ]
}
